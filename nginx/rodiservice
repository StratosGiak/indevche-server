server {
    server_name rodiservice.gr;

    root /var/www/rodiservice;
    index index.html;

    location /api/ {
        proxy_pass "http://node_app:3000/";
    }

    location /media/post/ {
        proxy_pass "http://node_app:3000/";
    }

    location /media/ {
        alias /var/www/rodiservice/public/;
    }
}